@model List<IdentityRole>
@{
	ViewData["Title"] = "Roles";
}

<h1>All Roles</h1>

<partial name="PartialViews/_RoleFormPartial" model="new CreateRoleVM()" />

@if (Model.Count > 0)
{
	<table class="table table-striped table-bordered table-hover mt-4">
		<thead>
			<tr class="bg-primary text-white text-center">
				<th>Role Name</th>
				<th>Id</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="text-center">
					<td>@item.Name</td>
					<td>@item.Id</td>
					<td>
						<a class="btn btn-outline-primary" asp-action="ManagePermissions" asp-route-id="@item.Id">Manage Permissions</a>
						<a class="btn btn-outline-danger js-delete" href="javascript:;" data-id="@item.Id">Delete</a>

					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="no-data">
		There Is No Roles ;(
	</div>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />

	<script>
		$(document).ready(function () {
			$('.js-delete').on('click', function () {

				const btn = $(this);

				bootbox.confirm({
					message: 'Are You Sure You Want To Delete This Role?',
					buttons: {
						confirm: {
							label: 'Yes',
							className: 'btn-danger'
						},
						cancel: {
							label: 'No',
							className: 'btn-secondary'
						}
					},
					callback: function (result) {
						if (result) {
							$.ajax({
								url: `/api/Roles/${btn.data('id')}`,
								method: 'DELETE',
								success: function () {
									btn.parents('tr').fadeOut();
									alert("Role Has Been Deleted!");
								},
								error: function () {
									alert("Something Went Wrong!")
								}
							}
							);
						}
					}
				});
			})
		})
	</script>

}


